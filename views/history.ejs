<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <%- include('partials/head') %>
</head>
<body class="h-full bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-gray-100" x-data="{ sidebarOpen: true }">
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <div class="transition-all duration-300" :class="sidebarOpen ? 'ml-64' : 'ml-20'">
        <div class="flex flex-col min-h-screen">
            <%- include('partials/header') %>

            <!-- Content Area -->
            <main class="flex-1 overflow-y-auto p-6">
                <!-- Flash Messages -->
                <%- include('partials/flash') %>

                <!-- Page Title -->
                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-white flex items-center gap-3">
                        <div class="w-8 h-8 bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg flex items-center justify-center shadow-lg">
                            <i class="fas fa-history text-white text-sm"></i>
                        </div>
                        Event History
                    </h2>
                    <p class="text-gray-400 text-sm mt-1">Monitor and track all system events and notifications</p>
                </div>

      <!-- Main Content Area -->
      <div class="p-6">
        <div class="max-w-7xl mx-auto">
          <!-- Filters and Controls -->
          <div class="bg-slate-800 rounded-xl p-6 mb-6 border border-slate-700">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
              <!-- Event Type Filter -->
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                  <i class="fas fa-filter mr-2"></i>Event Type
                </label>
            <select id="eventTypeFilter" class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option value="all" style="background-color: rgb(51 65 85); color: white;">All Events</option>
              <option value="device_added" style="background-color: rgb(51 65 85); color: white;">Device Added</option>
              <option value="device_removed" style="background-color: rgb(51 65 85); color: white;">Device Removed</option>
              <option value="device_online" style="background-color: rgb(51 65 85); color: white;">Device Online</option>
              <option value="device_offline" style="background-color: rgb(51 65 85); color: white;">Device Offline</option>
              <option value="high_cpu" style="background-color: rgb(51 65 85); color: white;">High CPU Usage</option>
              <option value="ping_up" style="background-color: rgb(51 65 85); color: white;">Ping Target Up</option>
              <option value="ping_down" style="background-color: rgb(51 65 85); color: white;">Ping Target Down</option>
              <option value="ping_timeout" style="background-color: rgb(51 65 85); color: white;">Ping Timeout</option>
              <option value="high_latency" style="background-color: rgb(51 65 85); color: white;">High Latency</option>
              <option value="ping_target_added" style="background-color: rgb(51 65 85); color: white;">Ping Target Added</option>
              <option value="ping_target_deleted" style="background-color: rgb(51 65 85); color: white;">Ping Target Deleted</option>
              <option value="ping_target_toggled" style="background-color: rgb(51 65 85); color: white;">Ping Target Toggled</option>
              <option value="interface_down" style="background-color: rgb(51 65 85); color: white;">Interface Down</option>
              <option value="topology_node_added" style="background-color: rgb(51 65 85); color: white;">Topology Node Added</option>
              <option value="topology_node_updated" style="background-color: rgb(51 65 85); color: white;">Topology Node Updated</option>
              <option value="topology_node_deleted" style="background-color: rgb(51 65 85); color: white;">Topology Node Deleted</option>
              <option value="topology_link_added" style="background-color: rgb(51 65 85); color: white;">Topology Link Added</option>
              <option value="topology_link_updated" style="background-color: rgb(51 65 85); color: white;">Topology Link Updated</option>
              <option value="topology_link_deleted" style="background-color: rgb(51 65 85); color: white;">Topology Link Deleted</option>
              <option value="system" style="background-color: rgb(51 65 85); color: white;">System Events</option>
            </select>
          </div>

          <!-- Severity Filter -->
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              <i class="fas fa-exclamation-triangle mr-2"></i>Severity
            </label>
            <select id="severityFilter" class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option value="all" style="background-color: rgb(51 65 85); color: white;">All Severities</option>
              <option value="info" style="background-color: rgb(51 65 85); color: white;">Info</option>
              <option value="warning" style="background-color: rgb(51 65 85); color: white;">Warning</option>
              <option value="error" style="background-color: rgb(51 65 85); color: white;">Error</option>
              <option value="critical" style="background-color: rgb(51 65 85); color: white;">Critical</option>
            </select>
          </div>

          <!-- Time Range -->
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              <i class="fas fa-calendar mr-2"></i>Time Range
            </label>
            <select id="timeRangeFilter" class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option value="1h" style="background-color: rgb(51 65 85); color: white;">Last Hour</option>
              <option value="24h" style="background-color: rgb(51 65 85); color: white;">Last 24 Hours</option>
              <option value="7d" selected style="background-color: rgb(51 65 85); color: white;">Last 7 Days</option>
              <option value="30d" style="background-color: rgb(51 65 85); color: white;">Last 30 Days</option>
              <option value="all" style="background-color: rgb(51 65 85); color: white;">All Time</option>
            </select>
          </div>

          <!-- Search -->
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              <i class="fas fa-search mr-2"></i>Search
            </label>
            <input
              type="text"
              id="searchFilter"
              placeholder="Search events..."
              class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex gap-3 mt-4">
          <button id="refreshBtn" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors duration-200">
            <i class="fas fa-sync-alt mr-2"></i>Refresh
          </button>
          <button id="clearBtn" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors duration-200">
            <i class="fas fa-trash mr-2"></i>Clear History
          </button>
          <button id="exportBtn" class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors duration-200">
            <i class="fas fa-download mr-2"></i>Export
          </button>
        </div>
      </div>

      <!-- Statistics Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-400 text-sm">Total Events</p>
              <p class="text-2xl font-bold text-white" id="totalEvents">0</p>
            </div>
            <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center">
              <i class="fas fa-list text-blue-400 text-xl"></i>
            </div>
          </div>
        </div>

        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-400 text-sm">Critical Events</p>
              <p class="text-2xl font-bold text-red-400" id="criticalEvents">0</p>
            </div>
            <div class="w-12 h-12 bg-red-500/20 rounded-lg flex items-center justify-center">
              <i class="fas fa-exclamation-triangle text-red-400 text-xl"></i>
            </div>
          </div>
        </div>

        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-400 text-sm">Warnings</p>
              <p class="text-2xl font-bold text-yellow-400" id="warningEvents">0</p>
            </div>
            <div class="w-12 h-12 bg-yellow-500/20 rounded-lg flex items-center justify-center">
              <i class="fas fa-exclamation-circle text-yellow-400 text-xl"></i>
            </div>
          </div>
        </div>

        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-400 text-sm">Info Events</p>
              <p class="text-2xl font-bold text-green-400" id="infoEvents">0</p>
            </div>
            <div class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center">
              <i class="fas fa-info-circle text-green-400 text-xl"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- Events Table -->
      <div class="bg-slate-800 rounded-xl border border-slate-700 overflow-hidden">
        <div class="p-6 border-b border-slate-700">
          <h2 class="text-xl font-semibold text-white">
            <i class="fas fa-list-ul mr-2"></i>Event Log
          </h2>
        </div>

        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-slate-700">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Time</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Severity</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Event Type</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Source</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Message</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Details</th>
              </tr>
            </thead>
            <tbody id="eventsTableBody" class="divide-y divide-slate-700">
              <!-- Events will be loaded here -->
            </tbody>
          </table>
        </div>

        <!-- Loading indicator -->
        <div id="loadingIndicator" class="p-8 text-center">
          <div class="inline-flex items-center gap-3 text-gray-400">
            <i class="fas fa-spinner fa-spin"></i>
            <span>Loading events...</span>
          </div>
        </div>

        <!-- Empty state -->
        <div id="emptyState" class="hidden p-8 text-center">
          <div class="text-gray-400">
            <i class="fas fa-inbox text-4xl mb-4 block"></i>
            <p class="text-lg">No events found</p>
            <p class="text-sm">Events will appear here as they occur in the system.</p>
          </div>
        </div>

        <!-- Pagination -->
        <div id="pagination" class="hidden px-6 py-4 border-t border-slate-700 bg-slate-800">
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-400">
              Showing <span id="showingStart">0</span> to <span id="showingEnd">0</span> of <span id="totalRecords">0</span> events
            </div>
            <div class="flex gap-2">
              <button id="prevPageBtn" class="px-3 py-1 bg-slate-700 hover:bg-slate-600 text-gray-300 rounded disabled:opacity-50 disabled:cursor-not-allowed">
                <i class="fas fa-chevron-left"></i>
              </button>
              <span id="currentPage" class="px-3 py-1 bg-blue-600 text-white rounded">1</span>
              <button id="nextPageBtn" class="px-3 py-1 bg-slate-700 hover:bg-slate-600 text-gray-300 rounded disabled:opacity-50 disabled:cursor-not-allowed">
                <i class="fas fa-chevron-right"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Event Details Modal -->
  <div id="eventModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-slate-800 rounded-xl max-w-2xl w-full max-h-[80vh] overflow-hidden">
        <div class="p-6 border-b border-slate-700">
          <div class="flex items-center justify-between">
            <h3 class="text-xl font-semibold text-white">Event Details</h3>
            <button id="closeModalBtn" class="text-gray-400 hover:text-white">
              <i class="fas fa-times text-xl"></i>
            </button>
          </div>
        </div>
        <div id="modalContent" class="p-6 overflow-y-auto max-h-96">
          <!-- Event details will be loaded here -->
        </div>
      </div>
    </div>
  </div>

  <script>
    let currentEvents = [];
    let filteredEvents = [];
    let currentPage = 1;
    const eventsPerPage = 50;
    let pollingIntervalMs = <%= pollingIntervalSeconds * 1000 %>; // Auto-refresh interval from settings

    // Event type configurations
    const eventTypes = {
      device_added: { icon: 'fas fa-plus-circle', color: 'text-green-400', bgColor: 'bg-green-500/20' },
      device_removed: { icon: 'fas fa-minus-circle', color: 'text-red-400', bgColor: 'bg-red-500/20' },
      device_online: { icon: 'fas fa-check-circle', color: 'text-green-400', bgColor: 'bg-green-500/20' },
      device_offline: { icon: 'fas fa-times-circle', color: 'text-red-400', bgColor: 'bg-red-500/20' },
      high_cpu: { icon: 'fas fa-microchip', color: 'text-yellow-400', bgColor: 'bg-yellow-500/20' },
      ping_up: { icon: 'fas fa-arrow-up', color: 'text-green-400', bgColor: 'bg-green-500/20' },
      ping_down: { icon: 'fas fa-arrow-down', color: 'text-red-400', bgColor: 'bg-red-500/20' },
      ping_timeout: { icon: 'fas fa-clock', color: 'text-orange-400', bgColor: 'bg-orange-500/20' },
      high_latency: { icon: 'fas fa-tachometer-alt', color: 'text-yellow-400', bgColor: 'bg-yellow-500/20' },
      ping_target_added: { icon: 'fas fa-plus-circle', color: 'text-green-400', bgColor: 'bg-green-500/20' },
      ping_target_deleted: { icon: 'fas fa-minus-circle', color: 'text-red-400', bgColor: 'bg-red-500/20' },
      ping_target_toggled: { icon: 'fas fa-toggle-on', color: 'text-blue-400', bgColor: 'bg-blue-500/20' },
      interface_down: { icon: 'fas fa-ethernet', color: 'text-red-400', bgColor: 'bg-red-500/20' },
      topology_node_added: { icon: 'fas fa-plus-circle', color: 'text-blue-400', bgColor: 'bg-blue-500/20' },
      topology_node_updated: { icon: 'fas fa-edit', color: 'text-cyan-400', bgColor: 'bg-cyan-500/20' },
      topology_node_deleted: { icon: 'fas fa-minus-circle', color: 'text-orange-400', bgColor: 'bg-orange-500/20' },
      topology_link_added: { icon: 'fas fa-link', color: 'text-green-400', bgColor: 'bg-green-500/20' },
      topology_link_updated: { icon: 'fas fa-edit', color: 'text-cyan-400', bgColor: 'bg-cyan-500/20' },
      topology_link_deleted: { icon: 'fas fa-unlink', color: 'text-orange-400', bgColor: 'bg-orange-500/20' },
      system: { icon: 'fas fa-cog', color: 'text-blue-400', bgColor: 'bg-blue-500/20' }
    };

    const severityColors = {
      info: 'text-blue-400',
      warning: 'text-yellow-400',
      error: 'text-red-400',
      critical: 'text-red-500'
    };

    // Initialize the page
    document.addEventListener('DOMContentLoaded', function() {
      loadEvents();
      setupEventListeners();
    });

    function setupEventListeners() {
      // Filter listeners
      document.getElementById('eventTypeFilter').addEventListener('change', applyFilters);
      document.getElementById('severityFilter').addEventListener('change', applyFilters);
      document.getElementById('timeRangeFilter').addEventListener('change', applyFilters);
      document.getElementById('searchFilter').addEventListener('input', applyFilters);

      // Button listeners
      document.getElementById('refreshBtn').addEventListener('click', loadEvents);
      document.getElementById('clearBtn').addEventListener('click', clearHistory);
      document.getElementById('exportBtn').addEventListener('click', exportEvents);

      // Pagination listeners
      document.getElementById('prevPageBtn').addEventListener('click', () => changePage(currentPage - 1));
      document.getElementById('nextPageBtn').addEventListener('click', () => changePage(currentPage + 1));

      // Modal listeners
      document.getElementById('closeModalBtn').addEventListener('click', closeModal);
      document.getElementById('eventModal').addEventListener('click', function(e) {
        if (e.target === this) closeModal();
      });
    }

    async function loadEvents() {
      try {
        document.getElementById('loadingIndicator').classList.remove('hidden');
        document.getElementById('emptyState').classList.add('hidden');

        const response = await fetch('/api/history');
        const data = await response.json();

        currentEvents = data.events || [];
        applyFilters();
        updateStatistics();

      } catch (error) {
        console.error('Error loading events:', error);
        showToast('Failed to load events', 'error');
      } finally {
        document.getElementById('loadingIndicator').classList.add('hidden');
      }
    }

    function applyFilters() {
      const eventType = document.getElementById('eventTypeFilter').value;
      const severity = document.getElementById('severityFilter').value;
      const timeRange = document.getElementById('timeRangeFilter').value;
      const searchTerm = document.getElementById('searchFilter').value.toLowerCase();

      let filtered = currentEvents;

      // Filter by event type
      if (eventType !== 'all') {
        filtered = filtered.filter(event => event.type === eventType);
      }

      // Filter by severity
      if (severity !== 'all') {
        filtered = filtered.filter(event => event.severity === severity);
      }

      // Filter by time range
      if (timeRange !== 'all') {
        const now = new Date();
        let cutoffTime;

        switch (timeRange) {
          case '1h':
            cutoffTime = new Date(now.getTime() - 60 * 60 * 1000);
            break;
          case '24h':
            cutoffTime = new Date(now.getTime() - 24 * 60 * 60 * 1000);
            break;
          case '7d':
            cutoffTime = new Date(now.getTime() - 7 * 24 * 60 * 60 * 1000);
            break;
          case '30d':
            cutoffTime = new Date(now.getTime() - 30 * 24 * 60 * 60 * 1000);
            break;
        }

        filtered = filtered.filter(event => new Date(event.timestamp) >= cutoffTime);
      }

      // Filter by search term
      if (searchTerm) {
        filtered = filtered.filter(event =>
          event.message.toLowerCase().includes(searchTerm) ||
          event.source.toLowerCase().includes(searchTerm) ||
          event.type.toLowerCase().includes(searchTerm)
        );
      }

      filteredEvents = filtered;
      currentPage = 1;
      renderEvents();
    }

    function renderEvents() {
      const tbody = document.getElementById('eventsTableBody');
      const startIndex = (currentPage - 1) * eventsPerPage;
      const endIndex = startIndex + eventsPerPage;
      const eventsToShow = filteredEvents.slice(startIndex, endIndex);

      if (eventsToShow.length === 0) {
        document.getElementById('emptyState').classList.remove('hidden');
        document.getElementById('pagination').classList.add('hidden');
        tbody.innerHTML = '';
        return;
      }

      document.getElementById('emptyState').classList.add('hidden');
      document.getElementById('pagination').classList.remove('hidden');

      tbody.innerHTML = eventsToShow.map(event => {
        const eventConfig = eventTypes[event.type] || eventTypes.system;
        const severityColor = severityColors[event.severity] || 'text-gray-400';

        return `
          <tr class="hover:bg-slate-700/50 transition-colors duration-200 cursor-pointer" onclick="showEventDetails(${event.id})">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
              ${formatDateTime(event.timestamp)}
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${severityColor} bg-slate-700">
                ${event.severity.toUpperCase()}
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center gap-2">
                <div class="w-8 h-8 ${eventConfig.bgColor} rounded-lg flex items-center justify-center">
                  <i class="${eventConfig.icon} ${eventConfig.color} text-sm"></i>
                </div>
                <span class="text-sm text-gray-300">${formatEventType(event.type)}</span>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
              ${event.source}
            </td>
            <td class="px-6 py-4 text-sm text-gray-300 max-w-xs truncate">
              ${event.message}
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-400">
              <button onclick="event.stopPropagation(); showEventDetails(${event.id})" class="hover:text-blue-300">
                <i class="fas fa-eye"></i>
              </button>
            </td>
          </tr>
        `;
      }).join('');

      updatePagination();
    }

    function updatePagination() {
      const totalPages = Math.ceil(filteredEvents.length / eventsPerPage);
      const showingStart = (currentPage - 1) * eventsPerPage + 1;
      const showingEnd = Math.min(currentPage * eventsPerPage, filteredEvents.length);

      document.getElementById('showingStart').textContent = showingStart;
      document.getElementById('showingEnd').textContent = showingEnd;
      document.getElementById('totalRecords').textContent = filteredEvents.length;
      document.getElementById('currentPage').textContent = currentPage;

      document.getElementById('prevPageBtn').disabled = currentPage === 1;
      document.getElementById('nextPageBtn').disabled = currentPage === totalPages;
    }

    function changePage(page) {
      const totalPages = Math.ceil(filteredEvents.length / eventsPerPage);
      if (page >= 1 && page <= totalPages) {
        currentPage = page;
        renderEvents();
      }
    }

    function updateStatistics() {
      const stats = {
        total: currentEvents.length,
        critical: currentEvents.filter(e => e.severity === 'critical').length,
        warning: currentEvents.filter(e => e.severity === 'warning').length,
        info: currentEvents.filter(e => e.severity === 'info').length
      };

      document.getElementById('totalEvents').textContent = stats.total;
      document.getElementById('criticalEvents').textContent = stats.critical;
      document.getElementById('warningEvents').textContent = stats.warning;
      document.getElementById('infoEvents').textContent = stats.info;
    }

    function formatDateTime(timestamp) {
      const date = new Date(timestamp);
      return date.toLocaleString('id-ID');
    }

    function formatEventType(type) {
      return type.split('_').map(word =>
        word.charAt(0).toUpperCase() + word.slice(1)
      ).join(' ');
    }

    function showEventDetails(eventId) {
      const event = currentEvents.find(e => e.id === eventId);
      if (!event) return;

      const eventConfig = eventTypes[event.type] || eventTypes.system;

      const modalContent = document.getElementById('modalContent');
      modalContent.innerHTML = `
        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 ${eventConfig.bgColor} rounded-lg flex items-center justify-center">
              <i class="${eventConfig.icon} ${eventConfig.color} text-xl"></i>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-white">${formatEventType(event.type)}</h4>
              <p class="text-gray-400">${formatDateTime(event.timestamp)}</p>
            </div>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-400">Severity</label>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${severityColors[event.severity]} bg-slate-700">
                ${event.severity.toUpperCase()}
              </span>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-400">Source</label>
              <p class="text-white">${event.source}</p>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-400 mb-2">Message</label>
            <p class="text-white bg-slate-700 p-3 rounded-lg">${event.message}</p>
          </div>

          ${event.details ? `
            <div>
              <label class="block text-sm font-medium text-gray-400 mb-2">Additional Details</label>
              <pre class="text-white bg-slate-700 p-3 rounded-lg text-sm overflow-x-auto">${JSON.stringify(event.details, null, 2)}</pre>
            </div>
          ` : ''}
        </div>
      `;

      document.getElementById('eventModal').classList.remove('hidden');
    }

    function closeModal() {
      document.getElementById('eventModal').classList.add('hidden');
    }

    async function clearHistory() {
      if (!confirm('Are you sure you want to clear all event history? This action cannot be undone.')) {
        return;
      }

      try {
        const response = await fetch('/api/history', {
          method: 'DELETE'
        });

        if (response.ok) {
          currentEvents = [];
          filteredEvents = [];
          renderEvents();
          updateStatistics();
          showToast('Event history cleared successfully', 'success');
        } else {
          throw new Error('Failed to clear history');
        }
      } catch (error) {
        console.error('Error clearing history:', error);
        showToast('Failed to clear event history', 'error');
      }
    }

    function exportEvents() {
      const dataStr = JSON.stringify(filteredEvents, null, 2);
      const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);

      const exportFileDefaultName = `smon-events-${new Date().toISOString().split('T')[0]}.json`;

      const linkElement = document.createElement('a');
      linkElement.setAttribute('href', dataUri);
      linkElement.setAttribute('download', exportFileDefaultName);
      linkElement.click();
    }

    function showToast(message, type = 'info', duration = 3000) {
      const toastContainer = document.getElementById('toast-container') || document.body;

      const toast = document.createElement('div');
      toast.className = `flex items-center p-4 rounded-lg shadow-lg transform transition-all duration-300 translate-x-full max-w-sm`;

      const colors = {
        success: 'bg-green-500',
        error: 'bg-red-500',
        warning: 'bg-yellow-500',
        info: 'bg-blue-500'
      };

      toast.classList.add(colors[type] || colors.info);
      toast.innerHTML = `
        <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-triangle' : type === 'warning' ? 'exclamation-circle' : 'info-circle'} mr-2"></i>
        ${message}
      `;

      toastContainer.appendChild(toast);

      // Animate in
      setTimeout(() => {
        toast.classList.remove('translate-x-full');
      }, 10);

      // Auto remove
      setTimeout(() => {
        toast.classList.add('translate-x-full');
        setTimeout(() => {
          if (toast.parentElement) {
            toast.remove();
          }
        }, 300);
      }, duration);
    }
  </script>

  <script>
    // Load history data on page load
    document.addEventListener('DOMContentLoaded', () => {
      loadEvents();
    });

    // Update header system stats
    function updateHeaderStats() {
      fetch('/api/system-info')
        .then(response => response.json())
        .then(data => {
          if (document.getElementById('header-cpu')) {
            document.getElementById('header-cpu').textContent = data.cpuUsage + '%';
          }
          if (document.getElementById('header-memory')) {
            const memUsedGB = (data.memory.used / 1024 / 1024 / 1024).toFixed(1);
            const memTotalGB = (data.memory.total / 1024 / 1024 / 1024).toFixed(1);
            document.getElementById('header-memory').textContent = `${memUsedGB}/${memTotalGB}GB`;
          }
          if (document.getElementById('header-events')) {
            // Update events count
            fetch('/api/history')
              .then(response => response.json())
              .then(history => {
                document.getElementById('header-events').textContent = history.length;
              })
              .catch(err => console.error('Error fetching history count:', err));
          }
        })
        .catch(err => console.error('Error fetching system info:', err));
    }

    // Initial update and periodic refresh
    updateHeaderStats();
    setInterval(updateHeaderStats, pollingIntervalMs); // Update based on polling interval
  </script>
