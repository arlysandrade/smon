<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Network Topology Map</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cytoscape/3.28.1/cytoscape.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cytoscape-cose-bilkent/4.1.0/cytoscape-cose-bilkent.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #f5f5f5;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header h1 {
            font-size: 24px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .header-controls {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 8px 16px;
            background: rgba(255,255,255,0.2);
            border: 1px solid rgba(255,255,255,0.4);
            color: white;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s;
        }

        .btn:hover {
            background: rgba(255,255,255,0.3);
            border-color: rgba(255,255,255,0.6);
        }

        .btn.primary {
            background: rgba(255,255,255,0.3);
        }

        .container {
            display: flex;
            flex: 1;
            gap: 0;
            overflow: hidden;
        }

        #cy {
            flex: 1;
            background: #fff;
            position: relative;
        }

        .sidebar {
            width: 320px;
            background: white;
            border-left: 1px solid #e0e0e0;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            box-shadow: -2px 0 8px rgba(0,0,0,0.05);
        }

        .sidebar-header {
            padding: 15px;
            border-bottom: 1px solid #e0e0e0;
            background: #fafafa;
            font-weight: 600;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .sidebar-content {
            flex: 1;
            overflow-y: auto;
            padding: 15px;
        }

        .panel {
            margin-bottom: 20px;
        }

        .panel-title {
            font-weight: 600;
            margin-bottom: 10px;
            color: #333;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .status-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
        }

        .status-indicator.up {
            background: #4caf50;
        }

        .status-indicator.down {
            background: #f44336;
        }

        .status-indicator.warning {
            background: #ff9800;
        }

        .status-indicator.unknown {
            background: #9e9e9e;
        }

        .node-card {
            background: #f9f9f9;
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            padding: 12px;
            margin-bottom: 10px;
            cursor: pointer;
            transition: all 0.2s;
        }

        .node-card:hover {
            background: #f0f0f0;
            border-color: #667eea;
            box-shadow: 0 2px 6px rgba(102, 126, 234, 0.2);
        }

        .node-card.selected {
            background: #f0f7ff;
            border-color: #667eea;
            box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
        }

        .node-name {
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }

        .node-info {
            font-size: 12px;
            color: #666;
            line-height: 1.4;
        }

        .node-info-row {
            display: flex;
            justify-content: space-between;
            margin: 4px 0;
        }

        .info-label {
            color: #999;
        }

        .info-value {
            color: #333;
            font-weight: 500;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            display: block;
            font-size: 13px;
            font-weight: 600;
            margin-bottom: 6px;
            color: #333;
        }

        .form-input {
            width: 100%;
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 13px;
            font-family: inherit;
        }

        .form-input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 2px rgba(102, 126, 234, 0.1);
        }

        .btn-group {
            display: flex;
            gap: 8px;
        }

        .btn-small {
            flex: 1;
            padding: 8px 12px;
            background: #667eea;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 12px;
            font-weight: 600;
            transition: all 0.2s;
        }

        .btn-small:hover {
            background: #764ba2;
            box-shadow: 0 2px 6px rgba(102, 126, 234, 0.3);
        }

        .btn-small.danger {
            background: #f44336;
        }

        .btn-small.danger:hover {
            background: #d32f2f;
        }

        .btn-small:disabled {
            background: #ccc;
            cursor: not-allowed;
        }

        .stats {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            margin-bottom: 15px;
        }

        .stat-box {
            background: #f9f9f9;
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            padding: 12px;
            text-align: center;
        }

        .stat-number {
            font-size: 24px;
            font-weight: 700;
            color: #667eea;
        }

        .stat-label {
            font-size: 12px;
            color: #999;
            margin-top: 4px;
        }

        .empty-state {
            text-align: center;
            padding: 20px;
            color: #999;
        }

        .legend {
            background: #f9f9f9;
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            padding: 12px;
            font-size: 12px;
            line-height: 1.8;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 6px;
        }

        .legend-color {
            width: 20px;
            height: 20px;
            border-radius: 3px;
        }

        .context-menu {
            position: fixed;
            background: white;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
            z-index: 1000;
            display: none;
            min-width: 150px;
        }

        .context-menu.visible {
            display: block;
        }

        .context-menu-item {
            padding: 10px 15px;
            cursor: pointer;
            border-bottom: 1px solid #f0f0f0;
            font-size: 13px;
            color: #333;
            transition: all 0.2s;
        }

        .context-menu-item:last-child {
            border-bottom: none;
        }

        .context-menu-item:hover {
            background: #f5f5f5;
            color: #667eea;
        }

        .context-menu-item.danger:hover {
            background: #ffebee;
            color: #f44336;
        }

        .toast {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: #333;
            color: white;
            padding: 12px 20px;
            border-radius: 4px;
            display: none;
            z-index: 2000;
            animation: slideIn 0.3s ease;
        }

        .toast.show {
            display: block;
        }

        .toast.success {
            background: #4caf50;
        }

        .toast.error {
            background: #f44336;
        }

        @keyframes slideIn {
            from {
                transform: translateX(400px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .spinner {
            display: inline-block;
            width: 16px;
            height: 16px;
            border: 2px solid #f3f3f3;
            border-top: 2px solid #667eea;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .toolbar {
            background: white;
            border-bottom: 1px solid #e0e0e0;
            padding: 12px 15px;
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .toolbar-separator {
            border-right: 1px solid #e0e0e0;
            margin: 0 5px;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column-reverse;
            }

            .sidebar {
                width: 100%;
                height: 40vh;
                border-left: none;
                border-top: 1px solid #e0e0e0;
            }
        }

        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background: #ddd;
            border-radius: 3px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #999;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>üó∫Ô∏è Network Topology Map</h1>
        <div class="header-controls">
            <button class="btn" onclick="addNodeMode()">+ Node</button>
            <button class="btn" onclick="addLinkMode()">+ Link</button>
            <button class="btn" onclick="fitGraph()">Fit View</button>
            <button class="btn primary" onclick="saveTopology()">üíæ Save</button>
        </div>
    </div>

    <div class="toolbar">
        <button class="btn-small" onclick="layoutGraph('cose')">Layout: COSe</button>
        <button class="btn-small" onclick="layoutGraph('circle')">Layout: Circle</button>
        <button class="btn-small" onclick="layoutGraph('grid')">Layout: Grid</button>
        <div class="toolbar-separator"></div>
        <button class="btn-small" onclick="refreshStatus()">üîÑ Refresh</button>
        <span style="margin-left: auto; font-size: 12px; color: #999; align-self: center;">
            <span id="nodeCount">0</span> nodes ‚Ä¢ <span id="linkCount">0</span> links
        </span>
    </div>

    <div class="container">
        <div id="cy"></div>
        
        <div class="sidebar">
            <div class="sidebar-header">
                <span>Details</span>
                <button class="btn" style="padding: 4px 8px; font-size: 12px;" onclick="closeSidebar()">‚úï</button>
            </div>
            
            <div class="sidebar-content">
                <div id="sidebarContent" class="empty-state">
                    <p>Click on a node or link to see details</p>
                </div>
            </div>
        </div>
    </div>

    <div id="contextMenu" class="context-menu"></div>
    <div id="toast" class="toast"></div>

    <script>
        let cy;
        let pollingInterval = <%= pollingIntervalSeconds %> * 1000;
        let selectedElement = null;
        let isAddingNode = false;
        let isAddingLink = false;
        let linkSourceNode = null;

        // Initialize Cytoscape
        function initCytoscape() {
            cy = cytoscape({
                container: document.getElementById('cy'),
                style: [
                    {
                        selector: 'node',
                        style: {
                            'background-color': (ele) => getNodeColor(ele.data('status')),
                            'label': 'data(label)',
                            'text-valign': 'center',
                            'text-halign': 'center',
                            'font-size': 12,
                            'color': '#333',
                            'width': 60,
                            'height': 60,
                            'border-width': 2,
                            'border-color': '#fff',
                            'shape': (ele) => getNodeShape(ele.data('type')),
                            'background-image': (ele) => getNodeIcon(ele.data('icon')),
                            'background-image-opacity': 0,
                            'z-index': 10
                        }
                    },
                    {
                        selector: 'node:selected',
                        style: {
                            'border-width': 3,
                            'border-color': '#667eea',
                            'box-shadow': '0 0 0 3px rgba(102, 126, 234, 0.2)'
                        }
                    },
                    {
                        selector: 'edge',
                        style: {
                            'line-color': (ele) => getLinkColor(ele.data('quality')),
                            'target-arrow-color': (ele) => getLinkColor(ele.data('quality')),
                            'target-arrow-shape': 'triangle',
                            'arrow-scale': 1.5,
                            'curve-style': 'bezier',
                            'width': 2,
                            'label': 'data(label)',
                            'font-size': 10,
                            'text-background-color': '#fff',
                            'text-background-padding': '3px',
                            'text-background-opacity': 0.9,
                            'z-index': 5
                        }
                    },
                    {
                        selector: 'edge:selected',
                        style: {
                            'width': 3,
                            'line-color': '#667eea'
                        }
                    }
                ],
                layout: {
                    name: 'cose',
                    directed: true,
                    animate: true,
                    animationDuration: 500
                }
            });

            // Event handlers
            cy.on('tap', 'node', onNodeTap);
            cy.on('tap', 'edge', onEdgeTap);
            cy.on('tap', onCanvasTap);
            cy.on('cxttap', 'node', onNodeContextMenu);
            cy.on('cxttap', 'edge', onEdgeContextMenu);
            cy.on('dragfree', 'node', saveNodePositions);

            loadTopology();
        }

        function getNodeColor(status) {
            switch(status) {
                case 'up': return '#4caf50';
                case 'down': return '#f44336';
                case 'warning': return '#ff9800';
                default: return '#9e9e9e';
            }
        }

        function getNodeShape(type) {
            switch(type) {
                case 'router': return 'diamond';
                case 'switch': return 'square';
                case 'access-point': return 'triangle';
                case 'server': return 'vee';
                case 'site': return 'hexagon';
                default: return 'ellipse';
            }
        }

        function getNodeIcon(icon) {
            // Could implement emoji/icon rendering here
            return null;
        }

        function getLinkColor(quality) {
            switch(quality) {
                case 'good': return '#4caf50';
                case 'warning': return '#ff9800';
                case 'critical': return '#f44336';
                default: return '#999';
            }
        }

        function onNodeTap(evt) {
            const node = evt.target;
            selectedElement = node;
            cy.$().unselect();
            node.select();
            showNodeDetails(node);
        }

        function onEdgeTap(evt) {
            const edge = evt.target;
            selectedElement = edge;
            cy.$().unselect();
            edge.select();
            showEdgeDetails(edge);
        }

        function onCanvasTap(evt) {
            if (evt.target === cy) {
                cy.$().unselect();
                selectedElement = null;
                document.getElementById('sidebarContent').innerHTML = '<p>Click on a node or link to see details</p>';
            }
        }

        function onNodeContextMenu(evt) {
            const node = evt.target;
            showContextMenu(evt.originalEvent, [
                { label: 'Edit', action: () => showEditNodeForm(node) },
                { label: 'Delete', action: () => deleteNode(node), danger: true }
            ]);
        }

        function onEdgeContextMenu(evt) {
            const edge = evt.target;
            showContextMenu(evt.originalEvent, [
                { label: 'Edit', action: () => showEditLinkForm(edge) },
                { label: 'Delete', action: () => deleteEdge(edge), danger: true }
            ]);
        }

        function showNodeDetails(node) {
            const data = node.data();
            const status = node.data('_status') || {};

            let html = `
                <div class="panel">
                    <div class="panel-title">
                        <span class="status-indicator ${status.status || 'unknown'}"></span>
                        ${data.label}
                    </div>
                    <div class="node-info">
                        <div class="node-info-row">
                            <span class="info-label">IP:</span>
                            <span class="info-value">${data.ip || 'N/A'}</span>
                        </div>
                        <div class="node-info-row">
                            <span class="info-label">Type:</span>
                            <span class="info-value">${data.type}</span>
                        </div>
                        <div class="node-info-row">
                            <span class="info-label">Status:</span>
                            <span class="info-value">${status.status || 'unknown'}</span>
                        </div>
                        <div class="node-info-row">
                            <span class="info-label">Latency:</span>
                            <span class="info-value">${status.latency || 0}ms</span>
                        </div>
                    </div>
                </div>
                <div class="btn-group">
                    <button class="btn-small" onclick="showEditNodeForm(cy.$('#${node.id()}'))">Edit</button>
                    <button class="btn-small danger" onclick="deleteNode(cy.$('#${node.id()}'))">Delete</button>
                </div>
            `;

            document.getElementById('sidebarContent').innerHTML = html;
        }

        function showEdgeDetails(edge) {
            const data = edge.data();
            const source = cy.$(`#${data.source}`).data();
            const target = cy.$(`#${data.target}`).data();
            const status = edge.data('_status') || {};

            let html = `
                <div class="panel">
                    <div class="panel-title">
                        Link: ${data.label}
                    </div>
                    <div class="node-info">
                        <div class="node-info-row">
                            <span class="info-label">From:</span>
                            <span class="info-value">${source.label}</span>
                        </div>
                        <div class="node-info-row">
                            <span class="info-label">To:</span>
                            <span class="info-value">${target.label}</span>
                        </div>
                        <div class="node-info-row">
                            <span class="info-label">Quality:</span>
                            <span class="info-value">${status.quality || 'unknown'}</span>
                        </div>
                        <div class="node-info-row">
                            <span class="info-label">Status:</span>
                            <span class="info-value">${status.status || 'unknown'}</span>
                        </div>
                    </div>
                </div>
                <div class="btn-group">
                    <button class="btn-small" onclick="showEditLinkForm(cy.$('#${edge.id()}'))">Edit</button>
                    <button class="btn-small danger" onclick="deleteEdge(cy.$('#${edge.id()}'))">Delete</button>
                </div>
            `;

            document.getElementById('sidebarContent').innerHTML = html;
        }

        function showEditNodeForm(node) {
            const data = node.data();
            let html = `
                <div class="panel">
                    <div class="panel-title">Edit Node</div>
                    <div class="form-group">
                        <label class="form-label">Label</label>
                        <input type="text" class="form-input" id="editLabel" value="${data.label}">
                    </div>
                    <div class="form-group">
                        <label class="form-label">IP Address</label>
                        <input type="text" class="form-input" id="editIp" value="${data.ip || ''}">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Type</label>
                        <select class="form-input" id="editType">
                            <option value="router" ${data.type === 'router' ? 'selected' : ''}>Router</option>
                            <option value="switch" ${data.type === 'switch' ? 'selected' : ''}>Switch</option>
                            <option value="access-point" ${data.type === 'access-point' ? 'selected' : ''}>Access Point</option>
                            <option value="server" ${data.type === 'server' ? 'selected' : ''}>Server</option>
                            <option value="site" ${data.type === 'site' ? 'selected' : ''}>Site</option>
                            <option value="device" ${data.type === 'device' ? 'selected' : ''}>Device</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Probe Target (IP)</label>
                        <input type="text" class="form-input" id="editProbeTarget" value="${data.probeTarget || ''}">
                    </div>
                    <div class="btn-group">
                        <button class="btn-small" onclick="updateNode(cy.$('#${node.id()}'))">Save</button>
                        <button class="btn-small" onclick="showNodeDetails(cy.$('#${node.id()}'))">Cancel</button>
                    </div>
                </div>
            `;
            document.getElementById('sidebarContent').innerHTML = html;
        }

        function showEditLinkForm(edge) {
            const data = edge.data();
            let html = `
                <div class="panel">
                    <div class="panel-title">Edit Link</div>
                    <div class="form-group">
                        <label class="form-label">Label</label>
                        <input type="text" class="form-input" id="editLinkLabel" value="${data.label}">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Latency Threshold (ms)</label>
                        <input type="number" class="form-input" id="editLatencyThreshold" value="${data.latencyThreshold || 100}">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Description</label>
                        <textarea class="form-input" id="editDescription" style="resize: vertical; min-height: 60px;">${data.description || ''}</textarea>
                    </div>
                    <div class="btn-group">
                        <button class="btn-small" onclick="updateLink(cy.$('#${edge.id()}'))">Save</button>
                        <button class="btn-small" onclick="showEdgeDetails(cy.$('#${edge.id()}'))">Cancel</button>
                    </div>
                </div>
            `;
            document.getElementById('sidebarContent').innerHTML = html;
        }

        function addNodeMode() {
            isAddingNode = !isAddingNode;
            if (isAddingNode) {
                showToast('Click on the map to add a new node', 'info');
                document.getElementById('cy').style.cursor = 'crosshair';
                cy.on('tap', onCanvasClickForNode);
            } else {
                cy.off('tap', onCanvasClickForNode);
                document.getElementById('cy').style.cursor = 'default';
            }
        }

        function onCanvasClickForNode(evt) {
            if (evt.target !== cy) return;
            
            const pos = evt.position;
            const nodeId = 'node-' + Date.now();
            
            showAddNodeForm(nodeId, pos);
        }

        function showAddNodeForm(nodeId, pos) {
            isAddingNode = false;
            cy.off('tap', onCanvasClickForNode);
            document.getElementById('cy').style.cursor = 'default';

            let html = `
                <div class="panel">
                    <div class="panel-title">New Node</div>
                    <div class="form-group">
                        <label class="form-label">Label</label>
                        <input type="text" class="form-input" id="newLabel" placeholder="Node name" autofocus>
                    </div>
                    <div class="form-group">
                        <label class="form-label">IP Address</label>
                        <input type="text" class="form-input" id="newIp" placeholder="10.0.0.1">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Type</label>
                        <select class="form-input" id="newType">
                            <option value="device">Device</option>
                            <option value="router">Router</option>
                            <option value="switch">Switch</option>
                            <option value="access-point">Access Point</option>
                            <option value="server">Server</option>
                            <option value="site">Site</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Probe Target (IP for ping)</label>
                        <input type="text" class="form-input" id="newProbeTarget" placeholder="Leave empty to skip">
                    </div>
                    <div class="btn-group">
                        <button class="btn-small" onclick="createNode('${nodeId}', ${pos.x}, ${pos.y})">Create</button>
                        <button class="btn-small" onclick="cancelAddNode()">Cancel</button>
                    </div>
                </div>
            `;
            document.getElementById('sidebarContent').innerHTML = html;
            document.getElementById('newLabel').focus();
        }

        async function createNode(nodeId, x, y) {
            const label = document.getElementById('newLabel').value.trim();
            const ip = document.getElementById('newIp').value.trim();
            const type = document.getElementById('newType').value;
            const probeTarget = document.getElementById('newProbeTarget').value.trim();

            if (!label) {
                showToast('Label is required', 'error');
                return;
            }

            try {
                const response = await fetch('/api/topology/nodes', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        id: nodeId,
                        label: label,
                        ip: ip,
                        type: type,
                        x: x,
                        y: y,
                        probeType: 'ping',
                        probeTarget: probeTarget || ip
                    })
                });

                if (!response.ok) throw new Error('Failed to create node');
                
                const result = await response.json();
                showToast('Node created', 'success');
                loadTopology();
                document.getElementById('sidebarContent').innerHTML = '<p>Node added. Click to select.</p>';
            } catch (err) {
                console.error(err);
                showToast('Error creating node', 'error');
            }
        }

        function cancelAddNode() {
            document.getElementById('sidebarContent').innerHTML = '<p>Click on a node or link to see details</p>';
        }

        async function updateNode(node) {
            const label = document.getElementById('editLabel').value.trim();
            const ip = document.getElementById('editIp').value.trim();
            const type = document.getElementById('editType').value;
            const probeTarget = document.getElementById('editProbeTarget').value.trim();

            if (!label) {
                showToast('Label is required', 'error');
                return;
            }

            try {
                const response = await fetch(`/api/topology/nodes/${node.id()}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        label: label,
                        ip: ip,
                        type: type,
                        probeTarget: probeTarget
                    })
                });

                if (!response.ok) throw new Error('Failed to update node');
                
                showToast('Node updated', 'success');
                loadTopology();
            } catch (err) {
                console.error(err);
                showToast('Error updating node', 'error');
            }
        }

        async function deleteNode(node) {
            if (!confirm('Delete this node and all connected links?')) return;

            try {
                const response = await fetch(`/api/topology/nodes/${node.id()}`, {
                    method: 'DELETE'
                });

                if (!response.ok) throw new Error('Failed to delete node');
                
                showToast('Node deleted', 'success');
                loadTopology();
            } catch (err) {
                console.error(err);
                showToast('Error deleting node', 'error');
            }
        }

        function addLinkMode() {
            isAddingLink = !isAddingLink;
            if (isAddingLink) {
                showToast('Click on source node, then target node', 'info');
                cy.on('tap', 'node', onNodeClickForLink);
            } else {
                cy.off('tap', 'node', onNodeClickForLink);
                linkSourceNode = null;
            }
        }

        function onNodeClickForLink(evt) {
            const node = evt.target;
            if (!linkSourceNode) {
                linkSourceNode = node;
                showToast('Now click target node', 'info');
            } else {
                if (node.id() === linkSourceNode.id()) {
                    showToast('Cannot link node to itself', 'error');
                    linkSourceNode = null;
                    return;
                }

                showCreateLinkForm(linkSourceNode, node);
                isAddingLink = false;
                cy.off('tap', 'node', onNodeClickForLink);
                linkSourceNode = null;
            }
        }

        function showCreateLinkForm(sourceNode, targetNode) {
            const linkId = 'link-' + Date.now();
            let html = `
                <div class="panel">
                    <div class="panel-title">New Link</div>
                    <div class="node-info">
                        <div class="node-info-row">
                            <span class="info-label">From:</span>
                            <span class="info-value">${sourceNode.data('label')}</span>
                        </div>
                        <div class="node-info-row">
                            <span class="info-label">To:</span>
                            <span class="info-value">${targetNode.data('label')}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Label</label>
                        <input type="text" class="form-input" id="newLinkLabel" placeholder="Link description" autofocus>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Latency Threshold (ms)</label>
                        <input type="number" class="form-input" id="newLatencyThreshold" value="100">
                    </div>
                    <div class="btn-group">
                        <button class="btn-small" onclick="createLink('${linkId}', '${sourceNode.id()}', '${targetNode.id()}')">Create</button>
                        <button class="btn-small" onclick="cancelAddLink()">Cancel</button>
                    </div>
                </div>
            `;
            document.getElementById('sidebarContent').innerHTML = html;
            document.getElementById('newLinkLabel').focus();
        }

        async function createLink(linkId, source, target) {
            const label = document.getElementById('newLinkLabel').value.trim();
            const latencyThreshold = parseInt(document.getElementById('newLatencyThreshold').value) || 100;

            try {
                const response = await fetch('/api/topology/links', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        id: linkId,
                        source: source,
                        target: target,
                        label: label,
                        latencyThreshold: latencyThreshold
                    })
                });

                if (!response.ok) throw new Error('Failed to create link');
                
                showToast('Link created', 'success');
                loadTopology();
                document.getElementById('sidebarContent').innerHTML = '<p>Link added.</p>';
            } catch (err) {
                console.error(err);
                showToast('Error creating link', 'error');
            }
        }

        function cancelAddLink() {
            linkSourceNode = null;
            document.getElementById('sidebarContent').innerHTML = '<p>Click on a node or link to see details</p>';
        }

        async function updateLink(edge) {
            const label = document.getElementById('editLinkLabel').value.trim();
            const latencyThreshold = parseInt(document.getElementById('editLatencyThreshold').value) || 100;
            const description = document.getElementById('editDescription').value.trim();

            try {
                const response = await fetch(`/api/topology/links/${edge.id()}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        label: label,
                        latencyThreshold: latencyThreshold,
                        description: description
                    })
                });

                if (!response.ok) throw new Error('Failed to update link');
                
                showToast('Link updated', 'success');
                loadTopology();
            } catch (err) {
                console.error(err);
                showToast('Error updating link', 'error');
            }
        }

        async function deleteEdge(edge) {
            if (!confirm('Delete this link?')) return;

            try {
                const response = await fetch(`/api/topology/links/${edge.id()}`, {
                    method: 'DELETE'
                });

                if (!response.ok) throw new Error('Failed to delete link');
                
                showToast('Link deleted', 'success');
                loadTopology();
            } catch (err) {
                console.error(err);
                showToast('Error deleting link', 'error');
            }
        }

        function saveNodePositions() {
            // Auto-save positions to topology via API
            cy.nodes().forEach(node => {
                const pos = node.position();
                fetch(`/api/topology/nodes/${node.id()}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ x: pos.x, y: pos.y })
                }).catch(err => console.error('Error saving position:', err));
            });
        }

        async function loadTopology() {
            try {
                const response = await fetch('/api/topology');
                const data = await response.json();

                // Clear existing elements
                cy.elements().remove();

                // Add nodes
                const nodes = data.nodes.map(node => ({
                    data: {
                        id: node.id,
                        label: node.label,
                        ip: node.ip,
                        type: node.type,
                        icon: node.icon,
                        status: data.status.nodes[node.id]?.status || 'unknown',
                        _status: data.status.nodes[node.id]
                    },
                    position: { x: node.x || 100, y: node.y || 100 }
                }));

                // Add edges/links
                const edges = data.links.map(link => ({
                    data: {
                        id: link.id,
                        source: link.source,
                        target: link.target,
                        label: link.label,
                        quality: data.status.links[link.id]?.quality || 'unknown',
                        _status: data.status.links[link.id]
                    }
                }));

                cy.add([...nodes, ...edges]);

                // Update counts
                document.getElementById('nodeCount').textContent = nodes.length;
                document.getElementById('linkCount').textContent = edges.length;

                // Auto-layout if nodes have no positions
                const needsLayout = nodes.some(n => n.position.x === 100 && n.position.y === 100);
                if (needsLayout) {
                    layoutGraph('cose');
                }
            } catch (err) {
                console.error('Error loading topology:', err);
                showToast('Error loading topology', 'error');
            }
        }

        async function refreshStatus() {
            try {
                const response = await fetch('/api/topology');
                const data = await response.json();

                // Update node colors based on status
                cy.nodes().forEach(node => {
                    const status = data.status.nodes[node.id()];
                    if (status) {
                        node.data('_status', status);
                        node.data('status', status.status);
                    }
                });

                // Update link colors based on quality
                cy.edges().forEach(edge => {
                    const status = data.status.links[edge.id()];
                    if (status) {
                        edge.data('_status', status);
                        edge.data('quality', status.quality);
                    }
                });

                showToast('Status updated', 'success');
            } catch (err) {
                console.error('Error refreshing status:', err);
                showToast('Error refreshing status', 'error');
            }
        }

        async function saveTopology() {
            showToast('Topology saved', 'success');
        }

        function layoutGraph(layoutName) {
            cy.layout({
                name: layoutName,
                animate: true,
                animationDuration: 500,
                directed: true
            }).run();
        }

        function fitGraph() {
            cy.fit(cy.elements(), 50);
        }

        function showContextMenu(event, items) {
            const menu = document.getElementById('contextMenu');
            menu.innerHTML = items.map(item => `
                <div class="context-menu-item ${item.danger ? 'danger' : ''}" onclick="${item.action.toString().match(/\w+\([^)]*\)/)[0]}">
                    ${item.label}
                </div>
            `).join('');

            menu.style.left = event.clientX + 'px';
            menu.style.top = event.clientY + 'px';
            menu.classList.add('visible');

            document.addEventListener('click', () => {
                menu.classList.remove('visible');
            }, { once: true });
        }

        function closeSidebar() {
            document.getElementById('sidebarContent').innerHTML = '<p>Click on a node or link to see details</p>';
            cy.$().unselect();
            selectedElement = null;
        }

        function showToast(message, type = 'info') {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.className = `toast show ${type}`;
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', () => {
            initCytoscape();
            
            // Refresh status periodically
            setInterval(refreshStatus, pollingInterval);
        });
    </script>
