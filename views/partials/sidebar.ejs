<!-- Sidebar -->
<div :class="sidebarOpen ? 'w-64' : 'w-20'" class="bg-gradient-to-b from-slate-950 to-slate-900 text-white transition-all duration-300 flex flex-col fixed h-full left-0 top-0 z-50 shadow-2xl border-r border-slate-700/70">
    <!-- Brand Header -->
    <div class="p-4 flex items-center justify-between border-b border-slate-700/70">
        <div :class="sidebarOpen ? 'flex' : 'hidden'" class="items-center space-x-3">
            <!-- Logo Icon -->
            <div class="relative">
                <div class="absolute inset-0 bg-gradient-to-br from-blue-500 to-cyan-400 rounded-lg blur-sm opacity-75"></div>
                <div class="relative bg-gradient-to-br from-blue-500 to-cyan-600 p-2 rounded-lg">
                    <i class="fas fa-chart-line text-white font-bold text-lg"></i>
                </div>
            </div>
            <!-- Text -->
            <div>
                <h1 class="text-xl font-bold leading-tight">SMon</h1>
                <p class="text-xs text-cyan-300">Network Monitor</p>
            </div>
        </div>
        <!-- Collapsed Logo -->
        <div :class="!sidebarOpen ? 'block' : 'hidden'" class="relative">
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500 to-cyan-400 rounded-lg blur-sm opacity-75"></div>
            <div class="relative bg-gradient-to-br from-blue-500 to-cyan-600 p-2 rounded-lg">
                <i class="fas fa-chart-line text-white font-bold text-lg"></i>
            </div>
        </div>
        <!-- Toggle Button -->
        <button @click="sidebarOpen = !sidebarOpen" class="p-2 hover:bg-white/10 rounded-lg transition-colors">
            <i :class="sidebarOpen ? 'fas fa-chevron-left' : 'fas fa-chevron-right'" class="text-white text-sm"></i>
        </button>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 p-4 space-y-2 overflow-y-auto">
        <a href="/" class="flex items-center space-x-3 px-4 py-3 rounded-lg <%= title === 'Dashboard' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
            <i class="fas fa-chart-area w-5"></i>
            <span :class="sidebarOpen ? 'block' : 'hidden'">Dashboard</span>
        </a>

        <!-- Monitoring Section -->
        <div class="pt-4">
            <div :class="sidebarOpen ? 'block' : 'hidden'" class="px-4 py-2 text-xs font-semibold text-cyan-300 uppercase tracking-wider">
                Monitoring
            </div>
            <div :class="!sidebarOpen ? 'flex justify-center py-2' : 'hidden'">
                <i class="fas fa-binoculars text-cyan-300 text-sm"></i>
            </div>

            <div class="space-y-1">
                <a href="/monitoring" class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'Bandwidth Monitor' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-gauge-high w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Bandwidth Monitor</span>
                </a>

                <a href="/ping" class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'Ping Monitor' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-network-wired w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Ping Monitor</span>
                </a>

                <a href="/websites" class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'Website Monitor' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-globe w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Website Monitor</span>
                </a>

                <a href="/domains" class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'Domain Monitor' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-at w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Domain Monitor</span>
                </a>
            </div>
        </div>

        <!-- Infrastructure Section -->
        <div class="pt-4">
            <div :class="sidebarOpen ? 'block' : 'hidden'" class="px-4 py-2 text-xs font-semibold text-green-300 uppercase tracking-wider">
                Infrastructure
            </div>
            <div :class="!sidebarOpen ? 'flex justify-center py-2' : 'hidden'">
                <i class="fas fa-server text-green-300 text-sm"></i>
            </div>

            <div class="space-y-1">
                <a href="/devices" class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'Devices' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-server w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Devices</span>
                </a>

                <a href="/map" class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'Topology Map' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-sitemap w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Topology Map</span>
                </a>
            </div>
        </div>

        <!-- Analytics Section -->
        <div class="pt-4">
            <div :class="sidebarOpen ? 'block' : 'hidden'" class="px-4 py-2 text-xs font-semibold text-orange-300 uppercase tracking-wider">
                Analytics
            </div>
            <div :class="!sidebarOpen ? 'flex justify-center py-2' : 'hidden'">
                <i class="fas fa-chart-bar text-orange-300 text-sm"></i>
            </div>

            <div class="space-y-1">
                <a href="/history" class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'History' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-history w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">History</span>
                </a>

                <a href="/status" class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'System Status - SMon' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-tachometer-alt w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">System Status</span>
                </a>
            </div>
        </div>

        <div class="border-t border-slate-700/70 pt-4 mt-4">
            <a href="/settings" class="flex items-center space-x-3 px-4 py-3 rounded-lg <%= title === 'Settings' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                <i class="fas fa-cog w-5"></i>
                <span :class="sidebarOpen ? 'block' : 'hidden'">Settings</span>
            </a>

            <a href="/about" class="flex items-center space-x-3 px-4 py-3 rounded-lg <%= title === 'About' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                <i class="fas fa-info-circle w-5"></i>
                <span :class="sidebarOpen ? 'block' : 'hidden'">About</span>
            </a>
        </div>
    </nav>

    <!-- Sidebar Footer -->
    <div class="p-4 border-t border-slate-700/70">
        <div :class="sidebarOpen ? 'block' : 'hidden'" class="text-xs text-gray-400 text-center">
            <p class="font-medium text-cyan-300">SMon v<%= version %></p>
            <p class="text-gray-500">Network Intelligence</p>
        </div>
        <div :class="!sidebarOpen ? 'flex justify-center' : 'hidden'">
            <i class="fas fa-chart-line text-cyan-300 text-lg"></i>
        </div>
    </div>
</div>
