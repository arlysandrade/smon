<!-- Flash Messages -->
<% if (typeof success_msg !== 'undefined' && success_msg && success_msg.length > 0) { %>
    <div class="mb-4 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg fade-in" role="alert" data-auto-hide>
        <div class="flex items-center">
            <i class="fas fa-check-circle mr-2"></i>
            <span><%= success_msg %></span>
        </div>
    </div>
<% } %>

<% if (typeof error_msg !== 'undefined' && error_msg && error_msg.length > 0) { %>
    <div class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg fade-in" role="alert" data-auto-hide>
        <div class="flex items-center">
            <i class="fas fa-exclamation-circle mr-2"></i>
            <span><%= error_msg %></span>
        </div>
    </div>
<% } %>